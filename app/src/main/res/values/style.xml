<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="searchTextStyle">
        <item name="android:background">@drawable/search_bar</item>
        <item name="android:paddingStart">21dp</item>
        <item name="android:drawablePadding">34dp</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:hint">@string/searchText</item>
        <item name="android:textColor">#61000000</item>
        <item name="android:textSize">15sp</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
    </style>

    <style name="inputTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="overviewTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8B000000</item>
    </style>

    <style name="releaseDateStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8B000000</item>
    </style>

    <style name="progressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateDrawable">@drawable/progress_bar_drawable</item>
    </style>

    <style name="emptyResponseStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B4B4B4</item>
    </style>

    <style name="errorStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B4B4B4</item>
    </style>


</resources>